{
  "id": "_xdm.mixins.experienceevent-social-network-usage-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Social Network Usage Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "retail",
      "financial_services",
      "travel_and_hospitality",
      "telecom",
      "automotive",
      "education",
      "health_and_life_sciences",
      "high_tech",
      "manufacturing",
      "media_and_entertainment",
      "public_sector"
    ]
  },
  "description": "Social network usage information such as share, content, and network. ",
  "meta:status": "stable",
  "meta:createdDate": "2021-01-15",
  "meta:xdmType": "object",
  "properties": {
    "socialMarketing ": {
      "type": "object",
      "meta:xdmType": "object",
      "properties": {
        "sharedContent": {
          "title": "Shared Content",
          "type": "string",
          "description": "Tracks the page/url/content/value of the item being shared.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:sharedContent",
          "tagNumber": 1
        },
        "follow": {
          "title": "Follow",
          "type": "integer",
          "description": "Tracks when a social follow event has occurred.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:follow",
          "tagNumber": 2
        },
        "sharedMessage": {
          "title": "Shared Message",
          "type": "string",
          "description": "Message that the sender sent",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:sharedMessage",
          "tagNumber": 3
        },
        "interactions": {
          "title": "Interactions",
          "type": "integer",
          "description": "The total number of social interactions.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:interactions",
          "tagNumber": 4
        },
        "network": {
          "title": "Network",
          "type": "string",
          "description": "Tracks the social sharing network in use, i.e. Facebook, Twitter, Instagram, etc.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:network",
          "tagNumber": 5
        },
        "target": {
          "title": "Target",
          "type": "string",
          "description": "For social interactions, this is the URL (or resource) which receives the social network action.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:target",
          "tagNumber": 6
        },
        "recipient": {
          "title": "Recipient",
          "type": "string",
          "description": "Recipient of the shared content",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:recipient",
          "tagNumber": 7
        },
        "share": {
          "title": "Share",
          "type": "integer",
          "description": "Tracks when a social sharing event has occurred.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:share",
          "tagNumber": 8
        }
      },
      "meta:xdmField": "xdm:socialMarketing ",
      "tagNumber": 1
    }
  },
