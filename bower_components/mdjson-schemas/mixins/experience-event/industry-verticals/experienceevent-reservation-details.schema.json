{
  "id": "_xdm.mixins.industry-verticals.experienceevent-reservation-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Reservation Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "travel_and_hospitality"
    ]
  },
  "description": "Reservation details such as length, modification, refundable status, and number of rooms.",
  "meta:status": "experimental",
  "meta:xdmType": "object",
  "properties": {
    "reservations": {
      "type": "object",
      "meta:xdmType": "object",
      "properties": {
        "ancillaryRevenue": {
          "title": "Ancillary Revenue",
          "$ref": "../../../datatypes/currency.schema.json",
          "description": "Protection and equipment revenue associated with a reservation.",
          "meta:xdmField": "xdm:ancillaryRevenue",
          "tagNumber": 1
        },
        "cancellation": {
          "title": "Cancellation",
          "type": "integer",
          "description": "Tracked when a reservation has been cancelled.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:cancellation",
          "tagNumber": 2
        },
        "confirmationNumber": {
          "title": "Confirmation Number",
          "type": "string",
          "description": "Tracks the reservation confirmation number/identifier.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:confirmationNumber",
          "tagNumber": 3
        },
        "created": {
          "title": "Created",
          "type": "integer",
          "description": "Tracked when a reservation has been created.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:created",
          "tagNumber": 4
        },
        "currencyCode": {
          "title": "Currency Code",
          "type": "string",
          "description": "Currency code used to make the purchase. ISO 4217 currency code.",
          "pattern": "^[A-Z]{3}$",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:currencyCode",
          "tagNumber": 5
        },
        "endDate": {
          "title": "End Date",
          "type": "string",
          "format": "date-time",
          "description": "The end drop-off/return/check-out date of the reservation.",
          "meta:xdmType": "date-time",
          "meta:xdmField": "xdm:endDate",
          "tagNumber": 6
        },
        "ID": {
          "title": "ID",
          "type": "string",
          "description": "Tracks the reservation number/identifier.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:ID",
          "tagNumber": 7
        },
        "length": {
          "title": "Length",
          "type": "integer",
          "description": "Tracks the total number of days for a reservation.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:length",
          "tagNumber": 8
        },
        "modification": {
          "title": "Modification",
          "type": "integer",
          "description": "Captured when a reservation has been modified.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:modification",
          "tagNumber": 9
        },
        "modificationDate": {
          "title": "Modification Date",
          "type": "string",
          "format": "date-time",
          "description": "Tracks when a reservation has been modified.",
          "meta:xdmType": "date-time",
          "meta:xdmField": "xdm:modificationDate",
          "tagNumber": 10
        },
        "nonRefundableAmount": {
          "title": "Non-Refundable Amount",
          "$ref": "../../../datatypes/currency.schema.json",
          "description": "Amount of the reservation price that is marked as non-refundable.",
          "meta:xdmField": "xdm:nonRefundableAmount",
          "tagNumber": 11
        },
        "numberOfAdults": {
          "title": "Number of Adults",
          "type": "integer",
          "description": "Captures the number of adults associated with the reservation.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:numberOfAdults",
          "tagNumber": 12
        },
        "numberOfChildren": {
          "title": "Number of Children",
          "type": "integer",
          "description": "Captures the number of children associated with the reservation.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:numberOfChildren",
          "tagNumber": 13
        },
        "purpose": {
          "title": "Purpose",
          "type": "string",
          "enum": [
            "business",
            "personal"
          ],
          "description": "Tracks the purpose of the reservation, typically either business or personal.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:purpose",
          "tagNumber": 15
        },
        "rackrate": {
          "title": "Rack Rate",
          "$ref": "../../../datatypes/currency.schema.json",
          "description": "Cost for the same day reservation without prior booking arrangements.",
          "meta:xdmField": "xdm:rackrate",
          "tagNumber": 16
        },
        "startDate": {
          "title": "Start Date",
          "type": "string",
          "format": "date-time",
          "description": "The start pick-up/outbound/check-in date of the reservation.",
          "meta:xdmType": "date-time",
          "meta:xdmField": "xdm:startDate",
          "tagNumber": 17
        },
        "transaction": {
          "title": "Transaction",
          "$ref": "../../../datatypes/industry-verticals/transaction.schema.json",
          "description": "Extension of transaction data type.",
          "meta:xdmField": "xdm:transaction",
          "tagNumber": 18
        },
        "triptype": {
          "title": "Trip Type",
          "type": "string",
          "enum": [
            "roundtrip",
            "one-way",
            "multi-city"
          ],
          "description": "Indicates if the reservation is for a one way, round trip, or multi-city.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:triptype",
          "tagNumber": 19
        },
        "type": {
          "title": "Type",
          "type": "string",
          "description": "Records the type of reservation being placed.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:type",
          "tagNumber": 20
        },
        "flightReservations": {
          "title": "Flight Reservations",
          "type": "array",
          "description": "Array of flight reservations under the main trip reservation.",
          "meta:xdmType": "array",
          "items": {
            "$ref": "experienceevent-flight-reservation.schema.json",
            "tagNumber": 1
          },
          "meta:xdmField": "xdm:flightReservations",
          "tagNumber": 21
        },
        "lodgingReservations": {
          "title": "Lodging Reservations",
          "type": "array",
          "description": "Array of lodging reservations under the main trip reservation.",
          "meta:xdmType": "array",
          "items": {
            "$ref": "experienceevent-lodging-reservation.schema.json",
            "tagNumber": 1
          },
          "meta:xdmField": "xdm:lodgingReservations",
          "tagNumber": 22
        },
        "vehicleReservations": {
          "title": "Vehicle Reservations",
          "type": "array",
          "description": "Array of vehicle reservations under the main trip reservation.",
          "meta:xdmType": "array",
          "items": {
            "$ref": "experienceevent-vehicle-reservation.schema.json",
            "tagNumber": 1
          },
          "meta:xdmField": "xdm:vehicleReservations",
          "tagNumber": 23
        },
        "diningReservations": {
          "title": "Dining Reservations",
          "type": "array",
          "description": "Array of dining reservations under the main trip reservation.",
          "meta:xdmType": "array",
          "items": {
            "$ref": "experienceevent-dining-reservation.schema.json",
            "tagNumber": 1
          },
          "meta:xdmField": "xdm:diningReservations",
          "tagNumber": 24
        }
      },
      "meta:xdmField": "xdm:reservations",
      "tagNumber": 1
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-reservation-details",
  "meta:altId": "_xdm.mixins.industry-verticals.experienceevent-reservation-details",
  "id": "_xdm.mixins.industry-verticals.experienceevent-reservation-details"
}
