{
  "id": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Flight Reservation",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "travel_and_hospitality"
    ]
  },
  "description": "Collects all details specific to a flight reservation.",
  "meta:status": "experimental",
  "meta:xdmType": "object",
  "properties": {
    "reservations": {
      "type": "object",
      "meta:xdmType": "object",
      "properties": {
        "flightReservation": {
          "type": "object",
          "description": "Captures all details specific to an individual flight reservation",
          "meta:xdmType": "object",
          "properties": {
            "agentID": {
              "title": "Agent ID",
              "type": "string",
              "description": "Agent or broker responsible for booking the reservation, if applicable.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:agentID",
              "tagNumber": 1
            },
            "arrivalAirportCode": {
              "title": "Arrival Airport Code",
              "type": "string",
              "description": "Tracks the arrival city airport code.",
              "pattern": "^[A-Z]{3}$",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:arrivalAirportCode",
              "tagNumber": 2
            },
            "itemComparison": {
              "title": "Item Comparison",
              "$ref": "../../../datatypes/industry-verticals/comparisons.schema.json",
              "description": "Used to track flight comparisons on a site or an app.",
              "meta:xdmField": "xdm:itemComparison",
              "tagNumber": 3
            },
            "departureAirportCode": {
              "title": "Departure Airport Code",
              "type": "string",
              "description": "Tracks the departure city airport code.",
              "pattern": "^[A-Z]{3}$",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:departureAirportCode",
              "tagNumber": 4
            },
            "fareClass": {
              "title": "Fare Class",
              "type": "string",
              "enum": [
                "first class",
                "business class",
                "premium economy",
                "economy"
              ],
              "description": "The fare class of the flight being reserved.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:fareClass",
              "tagNumber": 5
            },
            "departureDate": {
              "title": "Departure Date",
              "type": "string",
              "format": "date-time",
              "description": "The departure date of the flight being reserved.",
              "meta:xdmType": "date-time",
              "meta:xdmField": "xdm:departureDate",
              "tagNumber": 6
            },
            "arrivalDate": {
              "title": "Arrival Date",
              "type": "string",
              "format": "date-time",
              "description": "The arrival date of the flight being reserved.",
              "meta:xdmType": "date-time",
              "meta:xdmField": "xdm:arrivalDate",
              "tagNumber": 7
            },
            "flightNumber": {
              "title": "Flight Number",
              "type": "string",
              "description": "Tracks the flight number.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:flightNumber",
              "tagNumber": 8
            },
            "loyaltyID": {
              "title": "Loyalty ID",
              "type": "string",
              "description": "Includes the loyalty/rewards program ID for the passenger listed in the reservation.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:loyaltyID",
              "tagNumber": 9
            },
            "passenger": {
              "title": "Passenger",
              "$ref": "../../../datatypes/person/person.schema.json",
              "description": "Passenger info associated with the reservation.",
              "meta:xdmField": "xdm:passenger",
              "tagNumber": 10
            },
            "reservationID": {
              "title": "Reservation ID",
              "type": "string",
              "description": "",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:reservationID",
              "tagNumber": 11
            },
            "salesChannel": {
              "title": "Sales Channel",
              "type": "string",
              "enum": [
                "Web",
                "Mobile",
                "Mobile App",
                "Call Center",
                "Agent",
                "Third-Party"
              ],
              "description": "Sales channel from which the reservation was booked.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:salesChannel",
              "tagNumber": 12
            },
            "securityScreening": {
              "title": "Security Screening",
              "type": "string",
              "enum": [
                "Standard",
                "PreCheck"
              ],
              "description": "Type of security screening the passenger is subject to.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:securityScreening",
              "tagNumber": 13
            },
            "status": {
              "title": "Status",
              "type": "string",
              "enum": [
                "cancelled",
                "confirmed",
                "hold",
                "pending"
              ],
              "description": "The status of the flight reservation.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:status",
              "tagNumber": 14
            }
          },
          "meta:xdmField": "xdm:flightReservation",
          "tagNumber": 1
        }
      },
      "meta:xdmField": "xdm:reservations",
      "tagNumber": 1
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-flight-reservation",
  "meta:altId": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation",
  "id": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation"
}
