{
  "id": "_xdm.mixins.experienceevent-user-account-details",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "User Account Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "retail",
      "financial_services",
      "travel_and_hospitality",
      "telecom",
      "automotive",
      "education",
      "health_and_life_sciences",
      "high_tech",
      "manufacturing",
      "media_and_entertainment",
      "public_sector"
    ]
  },
  "description": "",
  "meta:status": "experimental",
  "meta:xdmType": "object",
  "properties": {
    "userAccount": {
      "type": "object",
      "meta:xdmType": "object",
      "properties": {
        "userAccountID": {
          "title": "User Account ID",
          "type": "string",
          "description": "Captures the user account ID.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:userAccountID",
          "tagNumber": 1
        },
        "userAccountPersonalDetails": {
          "title": "User Account Personal Details",
          "$ref": "../profile/profile-personal-details.schema.json",
          "description": "Extension of the Personal Profile data type.",
          "meta:xdmField": "xdm:userAccountPersonalDetails",
          "tagNumber": 2
        },
        "userAccountStart": {
          "title": "User Account Start Date",
          "type": "string",
          "format": "date-time",
          "description": "Date when the account was opened.",
          "meta:xdmType": "date-time",
          "meta:xdmField": "xdm:userAccountStart",
          "tagNumber": 3
        },
        "userAccountStatus": {
          "title": "User Account Status",
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "disabled",
            "other"
          ],
          "description": "This should describe the current status of the account",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:userAccountStatus",
          "tagNumber": 4
        },
        "userAccountSwitch": {
          "title": "Switch User Accounts",
          "type": "integer",
          "description": "Captures when a visitor switches their account during a visit.",
          "meta:xdmType": "int",
          "meta:xdmField": "xdm:userAccountSwitch",
          "tagNumber": 5
        },
        "userAccountType": {
          "title": "User Account Type",
          "type": "string",
          "description": "Captures the user account type, if applicable.",
          "meta:xdmType": "string",
          "meta:xdmField": "xdm:userAccountType",
          "tagNumber": 6
        },
        "userAccountRegistration": {
          "title": "User Account Registration",
          "$ref": "../../datatypes/industry-verticals/tool-usage.schema.json",
          "description": "Extension of toolUsage data type.",
          "meta:xdmField": "xdm:userAccountRegistration",
          "tagNumber": 7
        },
        "userAccountPreferences": {
          "title": "User Account Preferences",
          "type": "array",
          "description": "M/F, other shopping preferences. Preferences in personal profile is already captured- things like perferred method of contact, not shopping prefs. ",
          "meta:xdmType": "array",
          "items": {
            "type": "string",
            "meta:xdmType": "string",
            "tagNumber": 1
          },
          "meta:xdmField": "xdm:userAccountPreferences",
          "tagNumber": 8
        }
      },
      "meta:xdmField": "xdm:userAccount",
      "tagNumber": 1
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/mixins/experienceevent-user-account-details",
  "meta:altId": "_xdm.mixins.experienceevent-user-account-details",
  "id": "_xdm.mixins.experienceevent-user-account-details"
}
