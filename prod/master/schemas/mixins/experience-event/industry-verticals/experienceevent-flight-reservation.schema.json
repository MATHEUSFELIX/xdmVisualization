{
  "id": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Flight Reservation",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": [
      "travel_and_hospitality"
    ]
  },
  "description": "Collects all details specific to a flight reservation.",
  "meta:status": "experimental",
  "meta:xdmType": "object",
  "properties": {
    "reservations": {
      "type": "object",
      "meta:xdmType": "object",
      "properties": {
        "flightReservation": {
          "type": "object",
          "description": "Captures all details specific to an individual flight reservation",
          "meta:xdmType": "object",
          "properties": {
            "agentID": {
              "title": "Agent ID",
              "type": "string",
              "description": "Agent or broker responsible for booking the reservation, if applicable.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:agentID",
              "tagNumber": 1
            },
            "arrivalAirportCode": {
              "title": "Arrival Airport Code",
              "type": "string",
              "description": "Tracks the arrival city airport code.",
              "pattern": "^[A-Z]{3}$",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:arrivalAirportCode",
              "tagNumber": 2
            },
            "departureAirportCode": {
              "title": "Departure Airport Code",
              "type": "string",
              "description": "Tracks the departure city airport code.",
              "pattern": "^[A-Z]{3}$",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:departureAirportCode",
              "tagNumber": 3
            },
            "fareClass": {
              "title": "Fare Class",
              "type": "string",
              "enum": [
                "first class",
                "business class",
                "premium economy",
                "economy"
              ],
              "description": "The fare class of the flight being reserved.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:fareClass",
              "tagNumber": 4
            },
            "departureDate": {
              "title": "Departure Date",
              "type": "string",
              "format": "date-time",
              "description": "The departure date of the flight being reserved.",
              "meta:xdmType": "date-time",
              "meta:xdmField": "xdm:departureDate",
              "tagNumber": 5
            },
            "arrivalDate": {
              "title": "Arrival Date",
              "type": "string",
              "format": "date-time",
              "description": "The arrival date of the flight being reserved.",
              "meta:xdmType": "date-time",
              "meta:xdmField": "xdm:arrivalDate",
              "tagNumber": 6
            },
            "flightNumber": {
              "title": "Flight Number",
              "type": "string",
              "description": "Tracks the flight number.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:flightNumber",
              "tagNumber": 7
            },
            "loyaltyID": {
              "title": "Loyalty ID",
              "type": "string",
              "description": "Includes the loyalty/rewards program ID for the passenger listed in the reservation.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:loyaltyID",
              "tagNumber": 8
            },
            "passengerID": {
              "title": "Passenger ID",
              "type": "string",
              "description": "Passenger info associated with the reservation.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:passengerID",
              "tagNumber": 9
            },
            "salesChannel": {
              "title": "Sales Channel",
              "type": "string",
              "description": "Sales channel from which the reservation was booked.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:salesChannel",
              "tagNumber": 10
            },
            "securityScreening": {
              "title": "Security Screening",
              "type": "string",
              "description": "Type of security screening the passenger is subject to.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:securityScreening",
              "tagNumber": 11
            },
            "status": {
              "title": "Status",
              "type": "string",
              "description": "The status of the flight reservation.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:status",
              "tagNumber": 12
            },
            "cancellation": {
              "title": "Cancellation",
              "type": "integer",
              "description": "Tracked when a reservation has been cancelled.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:cancellation",
              "tagNumber": 13
            },
            "confirmationNumber": {
              "title": "Confirmation Number",
              "type": "string",
              "description": "Tracks the reservation confirmation number/identifier.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:confirmationNumber",
              "tagNumber": 14
            },
            "created": {
              "title": "Created",
              "type": "integer",
              "description": "Tracked when a reservation has been created.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:created",
              "tagNumber": 15
            },
            "currencyCode": {
              "title": "Currency Code",
              "type": "string",
              "description": "Currency code used to make the purchase. ISO 4217 currency code.",
              "pattern": "^[A-Z]{3}$",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:currencyCode",
              "tagNumber": 16
            },
            "ID": {
              "title": "ID",
              "type": "string",
              "description": "Tracks the reservation number/identifier.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:ID",
              "tagNumber": 17
            },
            "length": {
              "title": "Length",
              "type": "integer",
              "description": "Tracks the total number of days for a reservation.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:length",
              "tagNumber": 18
            },
            "modification": {
              "title": "Modification",
              "type": "integer",
              "description": "Captured when a reservation has been modified.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:modification",
              "tagNumber": 19
            },
            "modificationDate": {
              "title": "Modification Date",
              "type": "string",
              "format": "date-time",
              "description": "Tracks when a reservation has been modified.",
              "meta:xdmType": "date-time",
              "meta:xdmField": "xdm:modificationDate",
              "tagNumber": 20
            },
            "numberOfAdults": {
              "title": "Number of Adults",
              "type": "integer",
              "description": "Captures the number of adults associated with the reservation.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:numberOfAdults",
              "tagNumber": 21
            },
            "numberOfChildren": {
              "title": "Number of Children",
              "type": "integer",
              "description": "Captures the number of children associated with the reservation.",
              "meta:xdmType": "int",
              "meta:xdmField": "xdm:numberOfChildren",
              "tagNumber": 22
            },
            "purpose": {
              "title": "Purpose",
              "type": "string",
              "description": "Tracks the purpose of the reservation, typically either business or personal.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:purpose",
              "tagNumber": 23
            },
            "tripType": {
              "title": "Trip Type",
              "type": "string",
              "description": "Indicates if the reservation is for a one way, round trip, or multi-city.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:tripType",
              "tagNumber": 24
            },
            "type": {
              "title": "Type",
              "type": "string",
              "description": "Records the type of reservation being placed.",
              "meta:xdmType": "string",
              "meta:xdmField": "xdm:type",
              "tagNumber": 25
            },
            "flightCheckIn": {
              "type": "object",
              "description": "Flight check in details such as passengers, bags, as well as start, save, failure and complete of check in.",
              "meta:xdmType": "object",
              "properties": {
                "boardingGroup": {
                  "title": "Boarding Group",
                  "type": "string",
                  "description": "The airline specific indicator of boarding order.",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:boardingGroup",
                  "tagNumber": 1
                },
                "checkedBags": {
                  "title": "Checked Bags",
                  "type": "integer",
                  "description": "Tracks the number of bags checked for a flight.",
                  "meta:xdmType": "int",
                  "meta:xdmField": "xdm:checkedBags",
                  "tagNumber": 2
                },
                "checkedPassengers": {
                  "title": "Checked Passengers",
                  "type": "integer",
                  "description": "Tracks the number of passengers checked in for a flight, if multiple passengers exist for the same reservation number.",
                  "meta:xdmType": "int",
                  "meta:xdmField": "xdm:checkedPassengers",
                  "tagNumber": 3
                },
                "checkInMethod": {
                  "title": "Check In Method",
                  "type": "string",
                  "enum": [
                    "counter",
                    "mobile",
                    "web",
                    "kiosk"
                  ],
                  "description": "Tracks the method used to check in i.e. counter, online, kiosk, or self-service.",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:checkInMethod",
                  "tagNumber": 4
                },
                "arrivalAirportCode": {
                  "title": "Arrival Airport Code",
                  "type": "string",
                  "description": "Tracks the arrival city airport code.",
                  "pattern": "^[A-Z]{3}$",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:arrivalAirportCode",
                  "tagNumber": 6
                },
                "departureAirportCode": {
                  "title": "Departure Airport Code",
                  "type": "string",
                  "description": "Tracks the departure city airport code.",
                  "pattern": "^[A-Z]{3}$",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:departureAirportCode",
                  "tagNumber": 7
                },
                "flightNumber": {
                  "title": "Flight Number",
                  "type": "string",
                  "description": "The flight number for the flight being reserved.",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:flightNumber",
                  "tagNumber": 8
                },
                "confirmationNumber": {
                  "title": "Confirmation Number",
                  "type": "string",
                  "description": "Tracks the reservation confirmation number/identifier.",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:confirmationNumber",
                  "tagNumber": 9
                }
              },
              "meta:xdmField": "xdm:flightCheckIn",
              "tagNumber": 26
            },
            "flightStatusSearch": {
              "type": "object",
              "description": "Flight status search such as arrival and departure location, date, flight number, and search information.",
              "meta:xdmType": "object",
              "properties": {
                "searchCount": {
                  "title": "Search Count",
                  "type": "integer",
                  "description": "Incremented when a flight status search occurs.",
                  "meta:xdmType": "int",
                  "meta:xdmField": "xdm:searchCount",
                  "tagNumber": 1
                },
                "flightNumber": {
                  "title": "Flight Number",
                  "type": "string",
                  "description": "Captures the flight status search flight number.",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:flightNumber",
                  "tagNumber": 2
                },
                "arrivalAirportCode": {
                  "title": "Arrival Airport Code",
                  "type": "string",
                  "description": "Tracks the arrival city airport code.",
                  "pattern": "^[A-Z]{3}$",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:arrivalAirportCode",
                  "tagNumber": 3
                },
                "departureAirportCode": {
                  "title": "Departure Airport Code",
                  "type": "string",
                  "description": "Tracks the departure city airport code.",
                  "pattern": "^[A-Z]{3}$",
                  "meta:xdmType": "string",
                  "meta:xdmField": "xdm:departureAirportCode",
                  "tagNumber": 4
                },
                "departureDate": {
                  "title": "Departure Date",
                  "type": "string",
                  "format": "date-time",
                  "description": "The departure date of the flight being reserved.",
                  "meta:xdmType": "date-time",
                  "meta:xdmField": "xdm:departureDate",
                  "tagNumber": 5
                }
              },
              "meta:xdmField": "xdm:flightStatusSearch",
              "tagNumber": 27
            }
          },
          "meta:xdmField": "xdm:flightReservation",
          "tagNumber": 1
        }
      },
      "meta:xdmField": "xdm:reservations",
      "tagNumber": 1
    }
  },
  "meta:xdmId": "https://ns.adobe.com/xdm/mixins/industry-verticals/experienceevent-flight-reservation",
  "meta:altId": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation",
  "id": "_xdm.mixins.industry-verticals.experienceevent-flight-reservation"
}
